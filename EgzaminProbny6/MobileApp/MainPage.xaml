<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgzaminProbny6MobileApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="FillAndExpand"
            Margin="0, 20"
            >
            <Image
                Source="obraz.jpg"
                HorizontalOptions="Fill"
                />
            <HorizontalStackLayout
                BackgroundColor="Teal"
                >
                <Button
                    x:Name="btnLike"
                    Text="POLUB"
                    BackgroundColor="Teal"
                    TextColor="White"
                    Clicked="onBtnLikeClicked"
                    />
                <Button
                    x:Name="btnDelet"
                    Text="USUŃ"
                    BackgroundColor="Teal"
                    TextColor="White"
                    Clicked="onBtnDeletClicked"
                    />
                <Button
                    x:Name="btnSave"
                    Text="ZAPISZ"
                    BackgroundColor="Teal"
                    TextColor="White"
                    />
            </HorizontalStackLayout>
            <Label
                Text="0 polubień"
                x:Name="lblLikes"
                HorizontalOptions="End"
                BackgroundColor="Gray"
                />
            <Border
                BackgroundColor="Gray"
                Padding="1"
                />
            <Label
                Text="Opis"
                TextColor="Gray"
                FontAttributes="Bold"
                />
            <Label
                Text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych"
                TextColor="Gray"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
