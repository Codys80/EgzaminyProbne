<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgzaminProbny10MobileApp.MainPage"
             BackgroundColor="#5F9EA0">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"  Grid.Row="0"
                    Text="Podaj wartość klucza"
                    
                    TextColor="AntiqueWhite"/>
                <Entry
                    Grid.Column="0"  Grid.Row="1" x:Name="entKey"/>
                <Label
                    Grid.Column="0"  Grid.Row="2" Grid.RowSpan="1"
                    Text="Podaj tekst"
                    TextColor="AntiqueWhite"/>
                <Entry
                    Grid.Column="0"  Grid.Row="3" VerticalOptions="Fill" x:Name="entText"/>
                <Button
                    Grid.Column="1"  Grid.Row="3"
                    Text="Zaszyfruj"
                    BackgroundColor="LightBlue"
                    Clicked="OnCypherClicked"/>
                <Label
                    Grid.Column="2"  Grid.Row="0"
                    Text="Tekst zaszyfrowany"
                    TextColor="AntiqueWhite"/>
                <Border
                    Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Stroke="AntiqueWhite" StrokeThickness="2"> 
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Label
                        Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                        Text="placeholder"
                        VerticalOptions="Fill"
                        x:Name="lblEncryptedText"
                        TextColor="AntiqueWhite"/>
                </Border>
                <Button
                    Grid.Column="2" Grid.Row="3"
                    Text="Zapisz szyfr w pliku"
                    BackgroundColor="LightBlue"
                    Clicked="onSaveClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
