<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgzaminProbnyMobileApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="FillAndExpand"
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Rejestruj konto"
                BackgroundColor="Teal"
                TextColor="White"
                FontSize="Caption"
                />

            <Label
                Text="Podaj email:"
                />
            <Entry
                x:Name="entEmail"
                HorizontalOptions="FillAndExpand"
                />

            <Label
                Text="Podaj hasło:"
                />
            <Entry
                x:Name="entPassword"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                />
            <Label
                Text="Powtórz hasło:"
                />
            <Entry
                x:Name="entPasswordRepeat"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                />

            <Button
                Text="Zatwierdź"
                x:Name="btnConfirm"
                Clicked="onConfirmClicked"
                HorizontalOptions="Center"
                />
            <Label
                Text=""
                x:Name="lblLoginMessage"
                HorizontalOptions="Center"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
